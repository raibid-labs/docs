{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration for excluding repositories from documentation aggregation",
  "version": "1.0.0",
  "repositories": [
    "docs"
  ],
  "patterns": [
    "fork-*",
    "archive-*",
    "deprecated-*",
    "temp-*",
    "test-*",
    ".*-backup"
  ],
  "exclude_forks": true,
  "exclude_archived": true,
  "exclude_private": true,
  "require_docs_directory": true
}
